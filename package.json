{
  "name": "ntp-template",
  "license": "MIT",
  "scripts": {
    "postinstall": "yarn install:all",
    "install:all": "concurrently \"yarn install:frontend\" \"yarn install:backend\"",
    "install:frontend": "cd frontend && yarn",
    "install:backend": "cd backend && yarn",
    "dev": "yarn dev:all",
    "dev:all": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:backend": "cd backend && yarn dev"
  },
  "devDependencies": {
    "concurrently": "^7.3.0"
  }
}
